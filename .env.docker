# Ministry of Health Course Application
# Docker Environment Configuration
#
# Copy this file to .env when deploying with Docker
# Update the values according to your deployment environment

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="MOH Learning Platform"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Port_of_Spain
APP_PORT=8000

# =============================================================================
# Database Configuration (MySQL)
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=courseapp
DB_USERNAME=courseapp
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# =============================================================================
# Cache & Session
# =============================================================================
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# =============================================================================
# Mail Configuration
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@health.gov.tt
MAIL_FROM_NAME="MOH Learning Platform"

# =============================================================================
# Google OAuth Configuration
# Required for authentication
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# =============================================================================
# Moodle Integration
# =============================================================================
MOODLE_BASE_URL=https://learnabouthealth.hin.gov.tt
MOODLE_TOKEN=your-moodle-webservice-token
MOODLE_VERIFY_SSL=true
MOODLE_TIMEOUT=30
MOODLE_CONNECT_TIMEOUT=15
MOODLE_RETRY_TIMES=3
MOODLE_RETRY_SLEEP=1000
MOODLE_AUTO_CREATE_USERS=true
MOODLE_SEND_CREDENTIALS_EMAIL=true
MOODLE_DEFAULT_STUDENT_ROLE_ID=5
MOODLE_DEFAULT_TEACHER_ROLE_ID=3
MOODLE_DEFAULT_CATEGORY_ID=10

# =============================================================================
# Development Tools (set to true only in development)
# =============================================================================
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# =============================================================================
# Mailhog (Development only)
# =============================================================================
MAILHOG_PORT=8025
